<% layout('/layouts/boilerplate') %> <!-- By Ejs-Mate-->

    <body>
        <div class="filter-container">
            <div class="child-1">
                <div class="filter">
                    <div><i class="fa fa-fire"></i></div>
                    <p>Trending</p>
                </div>
                <div class="filter">
                    <div><i class="fa fa-star"></i></div>
                    <p>Top Rated</p>
                </div>
                <div class="filter">
                    <div><i class="fa fa-bed"></i></div>
                    <p>Rooms</p>
                </div>
                <div class="filter">
                    <div><i class="fa fa-mountain"></i></div>
                    <p>Mountains</p>
                </div>
                <div class="filter">
                    <div><i class="fa fa-building"></i></div>
                    <p>Appartments</p>
                </div>
                <div class="filter">
                    <div><i class="fa fa-cow"></i></div>
                    <p>Farms</p>
                </div>
                <div class="filter">
                    <div><i class="fa fa-ship"></i></div>
                    <p>Boats</p>
                </div>
            </div>
            <div class="child-2">
                <label>Display Total after Taxes</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (const listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-tile">
                    <div class="card listing-card" style="width: 20rem;">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                Rs <%= listing.price.toLocaleString('en-PK') %> / Night
                                &nbsp; &nbsp; <i class="tax-info">+10 GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>